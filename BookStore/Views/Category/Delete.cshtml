@model Category

<form method="post">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<h2 class="text-primary"> Delete Category</h2>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input disabled asp-for="Name" class="form-control" />


		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input disabled asp-for="DisplayOrder" class="form-control" />

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">DELETE</button>


			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="category" asp-action="index" class="btn btn-outline-secondary form-control">BACK TO LIST</a>

			</div>
		</div>
	</div>

</form>

