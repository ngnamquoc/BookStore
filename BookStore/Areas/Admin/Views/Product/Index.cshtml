@model List<Product>

<div class="container py-4">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h2 class="text-primary">
				CATEGORY LIST
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Product</a>
		</div>
	</div>
	<table class="table table-bordered table-striped py-4">
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Price</th>
				<th>Author</th>
				<th>Author</th>

				<th></th>
			</tr>

		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.Title

					</td>
					<td>
						@obj.ISBN

					</td>
					<td>
						@obj.ListPrice

					</td>
					<td>
						@obj.Author

					</td>

					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-route-id="@obj.Id" asp-controller="Product" asp-action="edit" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
							<a asp-route-id="@obj.Id" asp-controller="Product" asp-action="delete" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>